@model CScheduler.Classes.Database.CreditsNet

@{
    ViewBag.Title = "Edit network";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-3">
        &nbsp;
    </div>
    <div class="col-md-5">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div>
                @if (Model.ID <= 0)
                {
                    <h4>New network</h4>
                }
                else
                {
                    <h4>Edit network</h4>
                }
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.ID)

                <div class="form-group">
                    @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label" })
                    <div class="">
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.EndPoint, htmlAttributes: new { @class = "control-label" })
                    <div class="">
                        @Html.EditorFor(model => model.EndPoint, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.EndPoint, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4">
                        <a class="btn btn-light" href="/CreditsNet/Index"><i class="fas fa-arrow-alt-circle-left"></i> Back</a>
                    </div>
                    <div class="col-md-8 save-btn-div">
                        <a class="btn btn-light" href="/CreditsNet/Delete?id=@Model.ID"><i class="fas fa-times"></i> Delete</a>
                        <button type="submit" class="btn btn-success"><i class="fas fa-save"></i> Save</button>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="col-md-4">
        &nbsp;
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
